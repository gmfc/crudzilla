{{msg}}

{{#if entity}}
<form action="/crud/d/{{entityName}}/{{entity._id}}" method="post">
  <button type="submit">Deletar</button>
</form>

<form action="/crud/u/{{entityName}}/{{entity._id}}" method="post">
{{else}}
<form action="/crud/c/{{entityName}}" method="post">
{{/if}}

{{> textIn attName="initials" name="Iniciais" value=entity.initials required="required"}}

{{> mLangText attName="title" name="Titulo" value=entity.title required="required"}}

{{> mLangText attName="description" name="Descrição" value=entity.description}}

<label>Conferência</label>
<select name="conference">
    <option disabled selected>Selecionar</option>
  {{#each refData.Conference}}
    <option value="{{this._id}}" {{#equals ../entity.conference._id this._id}}selected{{/equals}}>{{this.initials}}</option>
  {{/each}}
</select>

<button type="submit">Enviar</button>
</form>
